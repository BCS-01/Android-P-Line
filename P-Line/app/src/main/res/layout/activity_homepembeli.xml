<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bcs.p_line.homepembeli"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@mipmap/bagianatascopy">

                <ImageView
                    android:layout_width="@dimen/abc_action_bar_default_height_material"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@mipmap/k200" />

                <ImageButton
                    android:layout_width="@dimen/abc_dropdownitem_icon_width"
                    android:layout_height="@dimen/abc_dropdownitem_icon_width"
                    android:id="@+id/home"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignTop="@+id/cari"
                    android:layout_toEndOf="@+id/imageView"
                    android:background="@mipmap/home" />

                <ImageButton
                    android:layout_width="@dimen/abc_action_button_min_width_overflow_material"
                    android:layout_height="@dimen/abc_action_button_min_width_overflow_material"
                    android:id="@+id/keranjang"
                    android:background="@mipmap/chart"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignTop="@+id/cari"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp" />

                <ImageButton
                    android:layout_width="@dimen/abc_dropdownitem_icon_width"
                    android:layout_height="@dimen/abc_dropdownitem_icon_width"
                    android:id="@+id/cari"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/saerchcopy"
                    android:layout_toStartOf="@+id/keranjang" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/search"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/cari"
                    android:layout_toRightOf="@+id/home" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/abc_dropdownitem_icon_width"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/menucopy" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingTop="10dp"
                    android:id="@+id/atas">

                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/makanan"
                        android:background="@android:color/transparent"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/minuman"
                        android:layout_toStartOf="@+id/minuman"
                        android:visibility="visible" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:id="@+id/minuman"
                        android:focusableInTouchMode="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignEnd="@+id/snack"
                        android:layout_marginEnd="70dp"
                        android:visibility="visible"
                        android:background="@android:color/transparent" />

                    <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/snack"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_marginLeft="200dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="visible"
                        android:background="@android:color/transparent" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>



        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lv" />


    </LinearLayout>

</LinearLayout>
